  var totalPages = Math.ceil(totalItems / itemsPerPage);
  var currentPage = 1;

  // Function to show job cards based on current page
  function showJobCards() {
    var startIndex = (currentPage - 1) * itemsPerPage;
    var endIndex = startIndex + itemsPerPage;

    // Hide all job cards
    $('.rec-group > ul.rec-job-info').hide();

    // Show the current set of job cards
    $('.rec-group > ul.rec-job-info').slice(startIndex, endIndex).show();
  }

  // Initial display
  showJobCards();

  // Handle next button click
  $('.next').click(function() {
    currentPage = (currentPage % totalPages) + 1;
    showJobCards();
  });

  // Handle previous button click
  $('.prev').click(function() {
    currentPage = (currentPage - 2 + totalPages) % totalPages + 1;
    showJobCards();
  });
